[binance_trader]

# All config params are explained in depth in the README.

# API key and Secret key created on Binance
binance_api_key=
binance_api_secret=

# `com` or `us`, depending on your region
binance_tld=com

# Number of reconnection attempts when unexpectedly disconnected from the Binance API
binance_retries=5

# Bridge coin of your choice
bridge_coin_symbol=USDT

# Starting coin, leave empty when it's the bridge.
# It has to be in the supported_coin_list
current_coin_symbol=DOT

# List of coins that you are willing to trade
coins_list=BTC ETH BCH BNB ADA XRP ATOM LUNA DOT SOL USDT

# Defines how long the scout history is stored in hours
scout_retention_time=1

# Defines to use either scout_margin or scout_multiplier
use_margin=no

# It's recommended to use something between 3-7 as scout_multiplier
scout_multiplier=5

# It's recommended to use something between 0.3 and 1.2 as scout_margin
scout_margin=0.8

# Controls how many seconds the bot should wait between
# analyzing the current prices
scout_sleep_time=1

# Pre-configured strategies are `coin_switch` and `coin_switch_multi`
strategy=coin_switch_multi

# Controls how many minutes to wait before cancelling a limit order (buy/sell) and returning to "scout" mode.
# 0 means that the order will never be cancelled prematurely.
buy_timeout=15
sell_timeout=15

[notifications]

# Webhook URL for Discord notifications
discord_webhook_url=
